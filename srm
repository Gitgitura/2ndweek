#!/bin/bash
#я запутался, сначала в репозитории файл создал, делали комиты
#потом переместил в bin
# потом назад в репозиторийб все коммиты стерлись и теперь не сохраняются
# 

if [ -e ~/RECYCLE ]
then
echo 'Мусорка существует'
gzip $1
mv $1.gz ~/RECYLE
find ~/RECYCLE -mtime +7 -delete
echo 'файл перемещен в корзину и самоуничтожиться через 7 дней вместе с твоим компом'
else
echo 'файл не существует'
mkdir -p ~/RECYCLE
fi
